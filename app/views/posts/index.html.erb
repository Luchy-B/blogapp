<h1>Here is a list of posts with comments for a given user</h1>

<main class='user-container'>
  <div class='user-content'>
    <div class="photo">
      <%= image_tag (@user.photo) %>
      <img src="<%=@user.photo%>" alt='user photo' />
    </div>
    <div>
        <h1><%=@user.name%></h1>
        <p>Number of Posts: <%=@user.post_counter%></p>
    </div>
  </div>
   

  <div>
      <% if @user.posts.empty? %>
      <p>No posts yet</p>
      <% else %>
        
        <% @user.posts.each do |post| %>
          <p><%= link_to user_post_path(@user.id, post.id) do %></p>
          <div class='postindex-post'>          
            <h4> Post #<%= post.id %></h4>

            <div>
              <p><%= post.text %></p>
            </div>

            <div class='postindex-indexC'>
              <p>Comments: <%= post.comments.count %>,</p>
              <p>Likes: <%= post.likes.count %></p>
            </div>
          </div>

          <div class='postindex-comment'>
            <% if post.recent_five_comments.empty? %>
            <p>No comments yet</p>
            <% else %>
              <% post.recent_five_comments.each do |comment| %>
                <div class='postshow-comment1'>
                <h4><%= comment.author.name %>:</h4>
                <p><%= comment.text %></p>
                </div>
              <% end %>
            <% end %>
          </div
          <% end %>
        <% end %>
        <div class='see-posts cssgrid'>
        <p><%= link_to 'Pagination', user_posts_path(@user.id) %></p>
      </div 
       
      <% end %>
  </div>

</main>